a sudo="sudo "

function xcat {
  #less -f $(for f in $*; do <(xmlstarlet fo $f); done)
  xmlstarlet fo $1
}

function ycat {
  (echo "<j>"; cat $1; echo "</j>") | xmlstarlet fo
}

function jcat {
  cat $1 | python -m json.tool
}

function xless {
  xcat $1 | less
}
function yless {
  xcat $1 | less
}
function jless {
  xcat $1 | less
}

function cdl {
    cd "$(dirname "$(readlink "$1")")";
}

